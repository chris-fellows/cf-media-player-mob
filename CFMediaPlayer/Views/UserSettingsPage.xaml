<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CFMediaPlayer.UserSettingsPage"
             Title="UserSettingsPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Picker x:Name="UITheme" 
            ItemsSource="{Binding UIThemes}"
           ItemDisplayBinding="{Binding Name}"
           SelectedItem="{Binding SelectedUITheme, Mode=TwoWay}"
           Title="{Binding LocalizationResources[MainSelectMediaLocationText], Mode=OneWay}">
        </Picker>

        <Button
            x:Name="SaveBtn"
            Text="Save"                 
            SemanticProperties.Hint="Saves user settings"
            Command="{Binding ExecuteSaveCommand}"                    
            HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>